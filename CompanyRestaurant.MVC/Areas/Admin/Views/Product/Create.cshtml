@model CompanyRestaurant.MVC.Models.ProductVM.ProductViewModel

@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitInStock"></label>
        <input asp-for="UnitInStock" class="form-control" />
        <span asp-validation-for="UnitInStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@ViewBag.CategoriesSelect" class="form-control">
            <option value="">Lütfen Kategori Seçiniz</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ürün Resmi</label>
        <input asp-for="ProductImage" type="file" class="form-control" />
        @if (ViewData.ModelState["ProductImage"]?.Errors.Count > 0)
        {
            <span class="text-danger">Ürün resmi yüklenmedi veya geçersiz.</span>
        }
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RecipeId"></label>
        <select asp-for="RecipeId" asp-items="@ViewBag.RecipesSelect" class="form-control">
            <option value="">Lütfen Reçete Seçiniz</option>
        </select>
        <span asp-validation-for="RecipeId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
</form>