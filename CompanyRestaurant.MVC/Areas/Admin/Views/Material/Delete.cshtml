@model CompanyRestaurant.MVC.Models.MaterialVM.MaterialViewModel

@{
    ViewData["Title"] = "Malzemeyi Sil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Uyarı!</h4>
    <p>Bu işlemi gerçekleştirdiğinizde, aşağıdaki malzemenin tüm bilgileri kalıcı olarak silinecektir. Bu işlem geri alınamaz.</p>
    <hr>
    <p class="mb-0">Lütfen silmek istediğinize emin olun.</p>
</div>

<div>
    <h4>Malzeme Bilgileri</h4>
    <dl class="row">
        <dt class="col-sm-4">Malzeme Adı</dt>
        <dd class="col-sm-8">@Model.MaterialName</dd>

        <dt class="col-sm-4">Fiyat</dt>
        <dd class="col-sm-8">@Model.Price</dd>

        <dt class="col-sm-4">Stok Miktarı</dt>
        <dd class="col-sm-8">@Model.UnitInStock</dd>

        <dt class="col-sm-4">Birim Tipi ID</dt>
        <dd class="col-sm-8">@Model.MateriUnitId</dd>

        <dt class="col-sm-4">Birim Tipi</dt>
        <dd class="col-sm-8">@Model.UnitName</dd>


        <dt class="col-sm-4">Aktif Mi?</dt>
        <dd class="col-sm-8">@Model.IsActive</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
</form>