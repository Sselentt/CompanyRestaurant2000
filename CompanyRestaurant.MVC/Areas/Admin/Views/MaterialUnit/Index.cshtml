@model IEnumerable<CompanyRestaurant.MVC.Models.MaterialUnitVM.MaterialUnitViewModel>

@{
    ViewData["Title"] = "Malzeme Birimleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Malzeme Birimi Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Birim</th>
            <th>Açıklama</th>
            <th>Malzeme ID</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var materialUnit in Model)
        {
            <tr>
                <td>@materialUnit.Unit</td>
                <td>@materialUnit.Description</td>
                <td>@materialUnit.MaterialId</td>
                <td>
                    <a href="@Url.Action("Edit", "MaterialUnit", new { id = materialUnit.Id })" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("Details", "MaterialUnit", new { id = materialUnit.Id })" class="btn btn-info">Detaylar</a>
                    <a href="@Url.Action("Delete", "MaterialUnit", new { id = materialUnit.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
