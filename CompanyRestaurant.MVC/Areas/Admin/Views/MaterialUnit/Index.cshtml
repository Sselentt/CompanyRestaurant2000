@model IEnumerable<CompanyRestaurant.MVC.Models.MaterialUnitVM.MaterialUnitViewModel>

@{
    ViewData["Title"] = "Malzeme Birim Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Malzeme Birimi Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Birim</th>
            <th>Açıklama</th>
            <th>Malzeme ID</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Unit</td>
                <td>@item.Description</td>
                <td>@item.MaterialId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
