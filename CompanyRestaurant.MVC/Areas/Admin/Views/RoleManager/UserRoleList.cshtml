@* @Model IEnumerable<CompanyRestaurant.MVC.Models.AppRoleVM.AssignRoleViewModel> *@
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Role Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Role Ata</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/RoleManager/AssignRole/@item.Id/" class="btn btn-outline-warning">Role Ata</a></td>
        </tr>
    }
</table>
<a href="/Admin/RoleManager/Index" class="btn btn-primary">Role Listesine Dön</a>
