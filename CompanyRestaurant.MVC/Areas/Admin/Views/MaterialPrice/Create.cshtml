@model CompanyRestaurant.MVC.Models.MaterialPriceVM.MaterialPriceViewModel

@{
    ViewData["Title"] = "Yeni Malzeme Fiyatı Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MaterialId"></label>
        <select asp-for="MaterialId" asp-items="@ViewBag.MaterialsSelect" class="form-control">
            <option value="">Lütfen Malzeme Adı Seçiniz</option>
        </select>
        <span asp-validation-for="MaterialId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Fiyat</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Açıklama</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierId"></label>
        <select asp-for="SupplierId" asp-items="@ViewBag.SuppliersSelect" class="form-control">
            <option value="">Lütfen Tedarikçi Seçiniz</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Aktif Mi?</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
</form>