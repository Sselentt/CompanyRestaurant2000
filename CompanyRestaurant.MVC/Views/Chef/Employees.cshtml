@model IEnumerable<CompanyRestaurant.MVC.Models.EmployeeVM.EmployeeViewModel>
@{
    ViewData["Title"] = "Çalışanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        ...
        <div class="row">
            @foreach (var employee in Model)
            {
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="staff">
                        <div class="img" style="background-image: url(@Url.Content("~/images/default.jpg"));"></div> <!-- Resim yolu dinamik olmalı -->
                        <div class="text px-4 pt-2">
                            <h3>@employee.Name @employee.Surname</h3>
                            <span class="position mb-2">@employee.Title</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

